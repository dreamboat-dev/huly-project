[DEFAULT]

# [ CRITICAL | ERROR | WARNING | NOTICE | INFO | DEBUG ]
loglevel = INFO

# [ STDOUT | STDERR | SYSLOG | SYSOUT | SYSTEMD-JOURNAL | FILE ]
logtarget = /var/log/fail2ban.log

# [ auto | true | false ]
allowipv6 = auto

# [ None | :memory: | FILE ]
dbfile = /var/lib/fail2ban/fail2ban.sqlite3

# [ INT (SECONDS) ]
dbpurgeage = 86400

# [ INT ]
dbmaxmatches = 10